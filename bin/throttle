#!/usr/bin/env ruby

begin
  require 'throttle'
rescue LoadError
  require 'rubygems'
  require 'throttle'
end

#throttle limit 500Kbps
#throttle limit 600Kbps
#throttle status
#throttle reset

throttle = Throttle.new

case ARGV[0]
when "limit"
  if ARGV[1]
    
  else
    error("Please provide a valid bit rate to limit.")
  end    
when "status"
  throttle.status
when "reset"    
  throttle.reset
else
  puts "Help Screen!"  
end  


def error(str)
  puts "Error: #{str}"
end  
